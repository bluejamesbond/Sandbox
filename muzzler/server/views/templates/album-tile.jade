.album-parent.album_wrapper.animator(id='playlist_{$m._id}',style='position: absolute; width: 301px; height: 316px;')
    .animator.album_container(style='overflow: hidden; background: #000; position: absolute; left: 0; right: -1px; bottom: 0; top: 0;')
        div.album_canvas.animator(id='{$m._id}_canvas',style='background:url({$m.imageBlurred}) center center no-repeat;height:100%;width:100%;opacity:0.5;background-position:center center;')
        div.album_overlay(style='position: absolute; left: 0; top: 0; right: 0; bottom: 0; box-shadow: inset 0 0 0 1px rgba(255,255,255,0.1); z-index: 2;display:none;')
        div.album(id='{$m._id}',style='position: absolute; left: 0; top: 0; right: 0; bottom: 45px; cursor: pointer; background: url({$m.imageLarge}) center top no-repeat; z-index: 3; background-size: cover; box-shadow: inset 0 0 1px 1px rgba(255,255,255,0.1);box-shadow:none;background-position:center center;', data-pid = "{$m._id}", data-songs="{$m.songs.join(',')}",data-image-blurred = "{$m.imageBlurred}")
        div.album_name(style='position: absolute; bottom: 0; left: 10px; right: 10px; height: 45px; line-height: 46px; font-weight: 400; font-size: 11px; z-index: 5; text-transform: uppercase; letter-spacing: 2px; color: #FFF; opacity: 0.8; text-indent: 8px;text-align:center;') {$m.name}
        div.album_name(style='position: absolute; bottom: 0; left: 10px; right: 10px; height: 45px; line-height: 46px; font-weight: 400; font-size: 11px; z-index: 5; text-transform: uppercase; letter-spacing: 2px; color: #FFF; opacity: 0.8; text-indent: 8px;text-align:center;text-align:left;font-size:20px;font-weight:700;display:none;') {$m.count}
        div.album_play(style='bottom: 12px; z-index: 5; text-transform: uppercase; position: absolute; height: 22px; font-weight: 400; font-size: 10px; text-align: center; border-radius: 19px; line-height: 22px; width: 47px; background: #067F80; border: none; color: #FFF; letter-spacing: 1px; right: 10px;display:none;') Play
