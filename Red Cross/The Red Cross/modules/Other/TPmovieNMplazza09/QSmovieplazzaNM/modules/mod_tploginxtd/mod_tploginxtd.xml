<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>TPLoginXtd</name>
	<author>TemplatePlazza.com</author>
	<creationDate>November 2009</creationDate>
	<copyright>Copyright (C) 2009 TemplatePlazza.com. All rights reserved.</copyright>
	<license>http://www.TemplatePlazza.com</license>
	<authorEmail>info@templateplazza.com</authorEmail>
	<authorUrl>www.templateplazza.com</authorUrl>
	<version>1.1.0</version>
	<description></description>
	<files>
		<filename module="mod_tploginxtd">mod_tploginxtd.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>elements</folder>
		<folder>tmpl</folder>
	</files>

	<languages>
		<language tag="en-GB">lang/en-GB.mod_tploginxtd.ini</language>
	</languages>

	<params addpath="/modules/mod_tploginxtd/elements">
		<param name="link_style" type="list" default="text" label="Choose Link Style" description="">
			<option value="text">Standard</option>
			<option value="left">Fix Left</option>
			<option value="right">Fix Right</option>
			<option value="top">Fix Top</option>
			<option value="bottom">Fix Bottom</option>
		</param>
		<param name="enable_login" type="radio" default="1" label="Show Login Form" description="">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="enable_register" type="radio" default="1" label="Show Register Form" description="">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="enable_contact" type="radio" default="1" label="Show Contact Form" description="">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="---- LOGIN FORM ----" label="" description="" />
		<param name="pretext" type="textarea" cols="30" rows="5" default="" label="Pre-text" description="PARAMPRETEXT" />
		<param name="posttext" type="textarea" cols="30" rows="5" label="Post-text" description="PARAMPOSTTEXT" />
		<param name="login" type="menuitem" default="" disable="separator" label="Login Redirection URL" description="PARAMLOGINREDIRECTURL" />
		<param name="logout" type="menuitem" default="" disable="separator" label="Logout Redirection URL" description="PARAMLOGOUTREDIRECTURL" />
		<param name="greeting" type="radio" default="1" label="Greeting" description="Show/Hide the simple greeting text">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="name" type="list" default="0" label="Name/Username">
			<option value="0">Username</option>
			<option value="1">Name</option>
		</param>
		<param name="usesecure" type="radio" default="0" label="Encrypt Login Form" description="Submit encrypted login data (requires SSL)">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>

		<param name="@spacer" type="spacer" default="---- CONTACT FORM ----" label="" description="" />
    <param type="Contact" name="contactid" default="" label="Contact" />
    <param type="text" name="your_email" default="your@email.com" label="Your Email" />
    <param type="text" name="contact_subject" default="New Contact" label="Email Subject" />
    <param type="text" name="sent_msg" default="Message sent successfuly" label="Message when Contact Sent" />
	</params>
    
</install>