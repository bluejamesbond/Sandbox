			<option value="right">Right</option>
		</param>
		
		<param name="textcolor" type="text" default="FFFFFF" size="20" label="Text Color" description="Text color in HEXA e.g. FF6600 (without #)" />
		
		<param name="showtitle" type="radio" default="1" label="Show Title"  description="Show title">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		
		<param name="showdesc" type="radio" default="1" label="Show Description"  description="Show description">
