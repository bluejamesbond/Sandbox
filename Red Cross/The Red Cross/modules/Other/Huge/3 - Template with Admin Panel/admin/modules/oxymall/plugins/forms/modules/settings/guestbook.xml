<form>
	<tabs>
		<t active="true" width="100" title="Module Settings" link="index.php?mod=oxymall&sub=oxymall.plugin.modules.user&action=details&mod_id={MODULE_ID}" />
		<t0 width="80" title="Messages" link="index.php?mod=oxymall&sub=oxymall.plugin.guestbook.landing&module_id={MODULE_ID}&returnurl={SELF.PREVIOUS_ENC}" />
		<t1 width="100" title="Smileys" link="index.php?mod=oxymall&sub=oxymall.plugin.guestbook.images&module_id={MODULE_ID}&returnurl={SELF.PREVIOUS_ENC}" />
		<t_video width="80" title="Video Tutorial" link="index.php?mod=oxymall&sub=oxymall.plugin.modules.help&module_id={MODULE_ID}" restricted="eval:$GLOBALS['no_tutorials'];"/>
	</tabs>

	<fields>
		<settings_title type="subtitle" title="Settings" />
	
		<set_form_title type="textbox" size="50" title="Form Title" />

		<set_contentwidth type="textbox" size="5" suffix="px" title="Content Width"/>
		
		<set_contentheight  type="textbox" size="5" suffix="px" title="Content Height"/>

		
		<set_smilywidth  type="textbox" size="5" suffix="px" title="Smiley Width"/>		
		<set_smilyheight  type="textbox" size="5" suffix="px" title="Smiley Height"/>
		<set_script  type="textbox" size="60" title="Posting Script"/>

		<settings_title2 type="subtitle" title="Misc" />

		<set_confirm type="checkbox" checked="1" title="Approve Messages" label="yes|no" description="By checking this all messages needs to be approved by an administrator prior to showing in site." />
		<set_reverse_order type="checkbox" checked="1" title="Reverse Order" label="yes|no" />

	</fields>
</form>