<form>
	<border>true</border>
	<title>Upload Folders</title>

	<alternance>true</alternance>
	<valternance>true</valternance>

	<tabs>
		<t0 width="100" title="Video Tutorial" link="index.php?mod=oxymall&sub=oxymall.plugin.modules.help" restricted="eval:$GLOBALS['no_tutorials'];" />
		<t1 width="100" title="Global Settings" link="index.php?mod=oxymall&sub=oxymall.plugin.modules.settings" />
		<t2 width="100" title="Installed Skins" link="index.php?mod=oxymall&sub=oxymall.plugin.modules.skins" />
		<t3 width="100" title="Installed Modules" link="index.php?mod=oxymall&sub=oxymall.plugin.modules.default" />
		<t4 width="100" title="Enabled Modules" link="index.php?mod=oxymall&sub=oxymall.plugin.modules.user" />
		<t5 active="true" width="100" title="Storage Folders" link="index.php?mod=oxymall&sub=oxymall.plugin.modules.folders" />
	</tabs>
	
	<fields>

		<_count header="No." width="20" align="right" suffix="."/>
		<path header="Path" />
		<chmod header="Chmod" align="right" width="60"/>
		<status header="Status" align="center" type="relation" width="150">
			<options>
				<option name="1">exists</option>
				<option name="2"><![CDATA[<font color="green">created</font>]]></option>
				<option name="0"><![CDATA[<font color="red">cant be created. parent permission must be 777</font>]]></option>
			</options>
		</status>

	</fields>

	<header>
		<titles>true</titles>
		<buttons>
		</buttons>
	</header>

	<items>50</items>
</form>