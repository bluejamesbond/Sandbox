<form>

	<tabs>
		<t active="true" width="100" title="Module Settings" link="index.php?mod=oxymall&sub=oxymall.plugin.modules.user&action=details&mod_id={MODULE_ID}" />
		<t0 width="80" title="Header" link="index.php?mod=oxymall&sub=oxymall.plugin.portfolio.landing&module_id={MODULE_ID}&action=details" />
		<t1 width="80" title="Categories" link="index.php?mod=oxymall&sub=oxymall.plugin.portfolio.cats&module_id={MODULE_ID}" />
