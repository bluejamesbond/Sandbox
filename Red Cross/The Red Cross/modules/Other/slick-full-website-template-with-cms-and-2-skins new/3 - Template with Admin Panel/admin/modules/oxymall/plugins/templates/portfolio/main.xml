<!--S:Main-->
<Portfolio>
	<settings>
		<portfolioIndex>
			<thumbWidth>{SET_THUMBWIDTH}</thumbWidth>
			<thumbHeight>{SET_THUMBHEIGHT}</thumbHeight>
			<distanceBetweenThumbs>{SET_DISTANCEBETWEENTHUMBS}</distanceBetweenThumbs>
			<thumbsOnSlider>{SET_THUMBSONSLIDER}</thumbsOnSlider>
			<scrollingBlurX>{SET_SCROLLINGBLURX}</scrollingBlurX>
			<fadeInAnimationTime>{SET_FADEINANIMATIONTIME}</fadeInAnimationTime>
			<maxTextWidth>{SET_MAXTEXTWIDTH}</maxTextWidth>
		</portfolioIndex>
	
		<projectsListing>
			<thumbWidthProjectTypeListing>{SET_THUMBWIDTHPROJECTTYPELISTING}</thumbWidthProjectTypeListing>
			<thumbHeightProjectTypeListing>{SET_THUMBHEIGHTPROJECTTYPELISTING}</thumbHeightProjectTypeListing>
			<horizontalSpace>{SET_HORIZONTALSPACE}</horizontalSpace>
			<verticalSpace>{SET_VERTICALSPACE}</verticalSpace>
			<projectsListingMaskHeight>{SET_PROJECTSLISTINGMASKHEIGHT}</projectsListingMaskHeight>
			<projectsListingMaskWidth>{SET_PROJECTSLISTINGMASKWIDTH}</projectsListingMaskWidth>
			<projectsListingTextWidth>{SET_PROJECTSLISTINGTEXTWIDTH}</projectsListingTextWidth>
			<backXPos>{SET_BACKXPOS}</backXPos>
		</projectsListing>
		
		<projectDetails>
			<thumbWidthProjectDetails>{SET_THUMBWIDTHPROJECTDETAILS}</thumbWidthProjectDetails>
			<thumbHeightProjectDetails>{SET_THUMBHEIGHTPROJECTDETAILS}</thumbHeightProjectDetails>
		</projectDetails>
		
		<popup>
			<popupBlurXAmount>{SET_POPUPBLURXAMOUNT}</popupBlurXAmount>
			<popupBlurYAmount>{SET_POPUPBLURYAMOUNT}</popupBlurYAmount>
			<popupAnimationTime>{SET_POPUPANIMATIONTIME}</popupAnimationTime>
			<popupAnimationType>{SET_POPUPANIMATIONTYPE}</popupAnimationType>
		</popup>
		
		<general>
			<blurXAmount>{SET_BLURXAMOUNT}</blurXAmount>
			<blurYAmount>{SET_BLURYAMOUNT}</blurYAmount>
			<animationType>{SET_ANIMATIONTYPE}</animationType>
			<animationTime>{SET_ANIMATIONTIME}</animationTime>
		</general>
	</settings>

	<content title="{MOD_TITLE}" urlTitle="{MOD_URLTITLE}" url="/{MOD_URL}">
		<![CDATA[{HEADER}]]>
	</content>

	<portfolio>
		{ITEMS}
	</portfolio>
</Portfolio>
<!--E:Main-->

