<form>
	<tabs>
		<t active="true" width="100" title="Module Settings" link="index.php?mod=oxymall&sub=oxymall.plugin.modules.user&action=details&mod_id={MODULE_ID}" />
		<t0 width="80" title="Header" link="index.php?mod=oxymall&sub=oxymall.plugin.clients.landing&module_id={MODULE_ID}&action=details&returnurl={SELF.PREVIOUS_ENC}" />
		<t1 width="80" title="Images" link="index.php?mod=oxymall&sub=oxymall.plugin.clients.images&module_id={MODULE_ID}&returnurl={SELF.PREVIOUS_ENC}" />
		<t_video width="80" title="Video Tutorial" link="index.php?mod=oxymall&sub=oxymall.plugin.modules.help&module_id={MODULE_ID}" restricted="eval:$GLOBALS['no_tutorials'];"/>
	</tabs>

	<fields>
		<settings_title type="subtitle" title="Settings" />
		
		<set_imagewidth type="textbox" suffix=" px" size="10" title="Image Width" />
		
		<set_imageheight type="textbox" suffix=" px" size="10" title="Image Height" />
		
		<set_horizontalspace type="textbox" suffix=" px" size="10" title="Horizontal Space" />
		
		<set_verticalspace type="textbox" suffix=" px" size="10" title="Vertical Space" />
		
		<settings_mis type="subtitle" title="Misc" />
		
		<set_reverseorder type="checkbox" checked="1" title="Reverse Images Order" label="yes|no" description="If you check this the last added client will appear the first."/>

	</fields>
	
</form>