ity:2}, onComplete:function(){						TweenMax.to(e.target, Global.settings.TIME/2, {glowFilter:{color:Global.settings.globalColor1, alpha:0, blurX:0, blurY:0}});					}});					dispatchEvent(new CustomEvent(CustomEvent.ARROW_CLICKED, {id:__id}));										break;				case MouseEvent.MOUSE_OVER:					TweenMax.from(e.target, Global.settings.TIME, {glowFilter:{color:Global.settings.globalColor1, alpha:1, blurX:4, blurY:4, strength:3, quality:2}});					break;				case MouseEvent.MOUSE_OUT:					TweenMax.to(e.target, Global.settings.TIME/2, {glowFilter:{color:Global.settings.globalColor1, alpha:0, blurX:0, blurY:0}});					break;			}		}				//////////////////////////////////////////////////////////		//		// Public Methods		//		//////////////////////////////////////////////////////////				//////////////////////////////////////////////////////////		//		// Setters and Getters		//		//////////////////////////////////////////////////////////					}}