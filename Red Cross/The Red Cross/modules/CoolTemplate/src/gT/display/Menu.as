package gT.display{		import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.events.Event;		public class Menu extends Sprite{		protected var __elementos:Array;		protected var __source:Array;		protected var __selected:*;		protected var __selectedIndex:uint = 0;		protected var __orientacion:String;		protected var __separacion:int;						public function Menu(){			__elementos = [];			__separacion = 0;			__orientacion = "h";			addEventListener(Event.REMOVED_FROM_STAGE, borrarEventos);		}				protected function crearMenu(){			var widthMenu:uint;			for(var i:uint = 0;i < __elementos.length; i++){				switch(__orientacion){					case "v":						__elementos[i].x = 0;						__elementos[i].y = (__elementos[i].height + __separacion) * i;					break;					default:						__elementos[i].y = 0;												__elementos[i].x = (i == 0) ? 0 : Math.round(widthMenu);						widthMenu += __elementos[i].width + __separacion;					break;				}			}						agregarEventos();		}						protected function agregarEventos(){			for(var i:uint = 0;i < __elementos.length; i++){				agregarEvento(__elementos[i]);			}		}				protected function borrarEventos(e:Event = null){			for(var i:uint = 0;i < __elementos.length; i++){				borrarEvento(__elementos[i]);			}		}				protected function agregarEvento(item:*){			item.addEventListener(MouseEvent.CLICK, mouseHandler, false, 0, true);			item.addEventListener(MouseEvent.MOUSE_OVER, mouseHandler, false, 0, true);			item.addEventListener(MouseEvent.MOUSE_OUT, mouseHandler, false, 0, true);			item.buttonMode = true;		}				protected function borrarEvento(item:*){			item.removeEventListener(MouseEvent.CLICK, mouseHandler);			item.removeEventListener(MouseEvent.MOUSE_OVER, mouseHandler);			item.removeEventListener(MouseEvent.MOUSE_OUT, mouseHandler);			item.buttonMode = false;		}				protected function mouseHandler(e:MouseEvent){}				public function set orientacion(value:String){			__orientacion = value;		}				public function get selected():* {			return __selected;		}				public function get selectedIndex():uint {			return __selectedIndex;		}				public function set separacion(value:uint){			__separacion = value;		}				public function set source(value:Array){			__source = value;		}				public function get source():Array{			return __source;		}				public function get elementos():Array{			return __elementos;		}	}}