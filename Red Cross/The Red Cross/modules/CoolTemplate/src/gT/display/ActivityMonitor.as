package gT.display {		import flash.events.TimerEvent;	import flash.display.Sprite;	import flash.display.Bitmap;	import flash.utils.Timer;		import gT.utils.ColorUtils;		public class ActivityMonitor extends Sprite {				private var __timer:Timer;		private var __monitor:Sprite;		private var __speed:Number;		private var __scale:Number;		private var __color:Number;				public function ActivityMonitor (speed:Number = .03, scale:Number = 1, _color:Number = 0xffffff):void {			__speed = speed;			__scale = scale;			__timer = new Timer(__speed * 1000);			__timer.addEventListener(TimerEvent.TIMER, rotate, false, 0, true);						__monitor = new VectorActivityMonitor;			__monitor.scaleX = __monitor.scaleY = __scale;						addChild(__monitor);						color = _color;		}		public function start ():void		{			__timer.start();		}				public function stop ():void		{			__timer.stop();		}				public function destroy ():void {			stop();			__timer.removeEventListener(TimerEvent.TIMER, rotate);		}				private function rotate (e:TimerEvent):void		{			__monitor.rotation = __monitor.rotation + 30;		}						/// set && get				public function set color (value:Number):void		{			__color = value;			ColorUtils.tint(__monitor, value);		}				public function get color ():Number		{			return __color;		}	}	}